{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Sms.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildSummaryApi",
            "program": "${workspaceFolder}/Sms.Api/bin/Debug/net8.0/Sms.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Sms.Api",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger/index.html",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "1-ASPNETCORE_ENVIRONMENT": "Production",
                "1-1ASPNETCORE_ENVIRONMENT": "Staging",
                "ASPNETCORE_URLS": "http://*:8980",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Docker: .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run",
            "netCore": {
            "appProject": "${workspaceFolder}/Sms.Api/Sms.Api.csproj"
            }
        }
    ]
}
